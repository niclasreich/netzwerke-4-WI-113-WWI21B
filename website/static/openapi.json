    "/api/request/": {
      "get": {
        "tags": ["Notizen"],
        "summary": "Alle Notizen eines Benutzers abrufen",
        "description": "Rufen Sie alle Notizen von einem Benutzer mit dem angegebenen Benutzernamen und Passwort ab",
        "parameters": [
          {
            "in": "query",
            "name": "username",
            "description": "Die E-Mail-Adresse des Benutzers",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "password",
            "description": "Das Passwort des Benutzers",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Page": {
                      "type": "string",
                      "example": "API"
                    },
                    "Status": {
                      "type": "integer",
                      "example": 200
                    },
                    "Message": {
                      "type": "string",
                      "example": "OK"
                    },
                    "Notizen": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "data": {
                            "type": "string",
                            "example": "Die Sonne scheint hell am Himmel und lässt den Tag in einem warmen Licht erstrahlen."
                          },
                          "date": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2023-05-01 10:38:03"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "204": {
            "description": "No Content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Page": {
                      "type": "string",
                      "example": "API"
                    },
                    "Status": {
                      "type": "integer",
                      "example": 204
                    },
                    "Message": {
                      "type": "string",
                      "example": "No Content"
                    },
                    "error": {
                      "type": "string",
                      "example": "Keine Notizen vorhanden"
                    }
                  }
